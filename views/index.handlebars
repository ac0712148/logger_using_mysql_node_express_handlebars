<h1>Big Burger Restaurant</h1>

<h2>Burgers To Be EATEN!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
          {{burger_name}}
          <button class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
            Devour it!
          </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ba">Burger Name:</label>
    <input type="text" class="form-control" id="newBurger" placeholder="Type a burrgerr!">
  </div>

  <button type="submit" id="newBurger btn">Add Burger</button>
</form>